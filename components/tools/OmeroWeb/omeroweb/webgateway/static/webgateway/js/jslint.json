/*
jslint config file from https://github.com/rondevera/jslintmate/blob/master/Support/config/jslint.json

Configured with OMERO preferences.

More info:
- JSLint options: http://www.jslint.com/lint.html#options
- JSLintMate:     http://rondevera.github.com/jslintmate/
*/


{
  /*** Globals ***/
  // To ignore any custom global variables, enable the `predef` option and list
  // your variables within it.

  "predef": [
    "jQuery"
  ],

  /*** Enforcing options ***/
  // Set these to `true` to enforce, or `false` to relax.
  "adsafe":     false,
  "safe":       false,

  /*** Relaxing options ***/
  // Set these to `true` to relax, or `false` to enforce.
  "bitwise":    false,
  "cap":        false,
  "confusion":  true,
  "continue":   true,
  "css":        true,
  "debug":      false,
  "eqeq":       false,
  "es5":        false,      // Don't allow - can make syntax errors on ES3
  "evil":       false,
  "forin":      false,
  "fragment":   true,
  "newcap":     false,
  "nomen":      true,
  "on":         false,
  "plusplus":   true,
  "regexp":     true,
  "sloppy":     false,      // must "use strict"
  "sub":        true,       // I like to use subscript['attr'] etc
  "undef":      false,
  "unparam":    true,       // E.g. ignore event in function(event, data)
  "vars":       true,       // One var per function is too strict!
  "white":      true,       // Get too much indentation if strict about whitespace

  /*** Environments ***/
  // Set each environment that you're using to `true`.
  "browser":    true,
  "devel":      false,
  "node":       false,
  "rhino":      false,
  "widget":     false,
  "windows":    false,

  /*** Miscellaneous ***/
  "indent":     4,          // This is what I use, but we don't enforce whitespace (see above)
  "maxerr":     50,
  "maxlen":     120,        // 80 is too short!
  "passfail":   false
}
