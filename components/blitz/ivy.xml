<ivy-module version="1.0">
  <info
      organisation="omero"
      module="blitz"
      status="integration"/>
  <configurations>
    <conf name="build"/>
    <conf name="client"/>
    <conf name="server"/>
  </configurations>
  <publications>
    <artifact name="blitz" type="jar"/>
  </publications>
  <dependencies>
    <!-- Internal -->
    <dependency name="server" rev="${omero.version}" changing="true" conf="build->build;server->server"/>
    <!-- Public -->
    <dependency org="omero" name="ice" rev="${versions.ice}" conf="build,client,server->default"/>
    <dependency org="batik" name="batik" rev="${versions.batik}" conf="build,client,server->default"/>
    <dependency org="batik" name="batik-parser" rev="${versions.batik}" conf="build,client,server->default"/>
    <dependency org="batik" name="batik-util" rev="${versions.batik}" conf="build,client,server->default"/>
    <dependency org="jts" name="jts" rev="${versions.jts}" conf="build,server->default"/>
    <!-- Export -->
    <dependency org="OME" name="bio-formats" rev="${versions.bio-formats}"/>
    <dependency org="OME" name="loci-common" rev="${versions.bio-formats}"/>
    <dependency org="loci" name="ome-xml" rev="${versions.bio-formats}"/>
  </dependencies>
</ivy-module>

